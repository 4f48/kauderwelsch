---
const { pathname } = Astro.url;
---

<header
    class="flex place-self-start absolute space-x-3 mt-3 bg-white rounded-full p-4 sm:w-auto align-middle"
>
    {
        pathname != "/" && (
            <nav>
                <a
                    class="p-2 rounded-full hover:bg-emerald-800 hover:text-white cursor-pointer sm:w-auto w-4"
                    data-astro-prefetch
                    href="/"
                >
                    ‚Üê Back
                </a>
            </nav>
        )
    }
    <nav>
        <a
            class="p-2 rounded-full hover:bg-emerald-800 hover:text-white cursor-pointer sm:w-auto"
            data-astro-prefetch
            href="/why">Why?</a
        >
    </nav>
    <nav>
        <a
            class="p-2 rounded-full hover:bg-emerald-800 hover:text-white cursor-pointer sm:w-auto focus:bg-gray-500 active:bg-opacity-75"
            data-astro-prefetch
            href="/who">Who?</a
        >
    </nav>
</header>
